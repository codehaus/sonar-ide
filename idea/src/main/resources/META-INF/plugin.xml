<!DOCTYPE idea-plugin PUBLIC "Plugin/DTD" "http://plugins.intellij.net/plugin.dtd">
<idea-plugin version="2" url="${project.url}">
  <name>Sonar</name>

  <id>${project.groupId}.${project.artifactId}</id>
  <version>${project.version}</version>

  <description><![CDATA[${project.description}]]></description>

  <vendor url="${project.organization.url}" email="user@sonar.codehaus.org">${project.organization.name}</vendor>

  <idea-version since-build="${idea.build}"/>

  <depends>org.jetbrains.idea.maven</depends>

  <application-components>
    <component>
      <implementation-class>org.sonar.ide.idea.SonarInspectionProvider</implementation-class>
    </component>
  </application-components>

  <project-components>
    <component>
      <implementation-class>org.sonar.ide.idea.SonarWorkspaceSettingsComponent</implementation-class>
    </component>
  </project-components>

  <actions>
    <!-- Experimental:
    <action id="SonarCheckUpdate"
            class="org.sonar.ide.idea.autoupdate.CheckUpdateAction"
            text="Check Sonar Update">
      <add-to-group group-id="ToolsMenu" anchor="first"/>
    </action>
    -->
  </actions>

  <extensions defaultExtensionNs="com.intellij">
  </extensions>
</idea-plugin>
