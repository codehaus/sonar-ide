<?xml version="1.0" encoding="UTF-8"?>
<extension xmlns="http://jcp.org/jsr/198/extension-manifest"
           id="${project.groupId}.${project.artifactId}" version="0.1"
           esdk-version="1.0">

  <!-- NOTE: version can't be 0.1-SNAPSHOT -->

  <name>Sonar</name>

  <owner><!--TODO--></owner>

  <dependencies>
    <import>oracle.ide</import>
  </dependencies>
  <classpaths>
    <classpath>../../ide/lib/uic.jar</classpath>
    <classpath>../../jlib/jewt4.jar</classpath>
  </classpaths>
  <hooks>
    <feature-hook>
      <part-of>oracle.ide.extsamples.allsamples</part-of>
      <description>Shows how to display a notification balloon in the IDE's status bar area.</description>
      <optional>true</optional>
    </feature-hook>
    <jdeveloper-hook xmlns="http://xmlns.oracle.com/jdeveloper/1013/extension">
      <addins>
        <addin>org.sonar.ide.jdeveloper.SampleBalloonAddin</addin>
      </addins>
    </jdeveloper-hook>
  </hooks>

</extension>